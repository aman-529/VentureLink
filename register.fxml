<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="644.0" prefWidth="940.0" styleClass="login-bg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="registerpage.ControllerRegister">
        <children>
            <AnchorPane fx:id="ancorPane" layoutX="108.0" layoutY="135.0">
                <children>
                    <ImageView fitHeight="330.0" fitWidth="346.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@loginlogo.png" />
                        </image>
                    </ImageView>
                </children>
                <effect>
                    <DropShadow />
                </effect>
            </AnchorPane>
            <AnchorPane accessibleRole="LIST_VIEW" layoutX="438.0" layoutY="83.0" prefHeight="433.0" prefWidth="388.0" style="-fx-background-color: #FFF; -fx-background-radius: 10px;">
                <effect>
                    <DropShadow />
                </effect>
                <children>
                    <TextField fx:id="fullname" layoutX="64.0" layoutY="92.0" prefHeight="27.0" prefWidth="239.0" promptText="Full name">
                        <font>
                            <Font name="System Italic" size="13.0" />
                        </font>
                    </TextField>
                    <PasswordField fx:id="register_password" layoutX="64.0" layoutY="203.0" prefHeight="27.0" prefWidth="240.0" promptText="password">
                        <font>
                            <Font name="System Italic" size="13.0" />
                        </font>
                    </PasswordField>
                    <Button layoutX="64.0" layoutY="273.0" mnemonicParsing="false" onAction="#register" prefHeight="27.0" prefWidth="80.0" styleClass="btn-login" stylesheets="@style.css" text="Register" />
                    <Label fx:id="lblLogin" alignment="CENTER" contentDisplay="CENTER" layoutX="80.0" layoutY="368.0" onMouseClicked="#openLoginScene" prefHeight="20.0" prefWidth="207.0" text="Already have an account? Log In" textFill="#ef20c2">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="email" layoutX="64.0" layoutY="130.0" prefHeight="27.0" prefWidth="239.0" promptText="Email">
                        <font>
                            <Font name="System Italic" size="13.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="register_username" layoutX="64.0" layoutY="168.0" prefHeight="27.0" prefWidth="239.0" promptText="username">
                        <font>
                            <Font name="System Italic" size="13.0" />
                        </font>
                    </TextField>
                    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="99.0" layoutY="53.0" prefHeight="26.0" prefWidth="172.0" styleClass="lbl-status" stylesheets="@style.css" text="Create An Account" textFill="#ff00c8">
                        <font>
                            <Font name="System Bold" size="15.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="roleComboBox" layoutX="64.0" layoutY="238.0" prefHeight="26.0" prefWidth="239.0" promptText="Select Your Role" stylesheets="@style.css" />
                </children>
            </AnchorPane>
        </children>
</AnchorPane>
